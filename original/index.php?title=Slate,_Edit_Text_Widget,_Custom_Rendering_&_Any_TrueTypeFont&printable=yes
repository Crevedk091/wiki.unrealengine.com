&#160;
	<span class="co1">//ESC Pressed</span>
	<span class="kw1">if</span><span class="br0">&#40;</span>VKey <span class="sy1">==</span> EKeys<span class="sy4">::</span><span class="me2">Escape</span><span class="br0">&#41;</span>
	<span class="br0">&#123;</span>
