<span class="co1">//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~</span>
&#160;
<span class="co1">//Custom Slate Element</span>
<span class="co2">#include &quot;SSoftEdgeImage.h&quot;</span>
