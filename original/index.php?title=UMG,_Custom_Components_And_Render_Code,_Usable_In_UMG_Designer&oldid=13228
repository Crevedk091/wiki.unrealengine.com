	<span class="coMULTI">/** Thickness */</span>
	UPROPERTY<span class="br0">&#40;</span>EditDefaultsOnly, BlueprintReadOnly, Category<span class="sy1">=</span><span class="st0">&quot;Joy Soft Edge Image&quot;</span><span class="br0">&#41;</span>
	<span class="kw4">float</span> Thickness<span class="sy4">;</span>
