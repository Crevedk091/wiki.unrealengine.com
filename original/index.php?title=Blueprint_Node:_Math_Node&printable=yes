&#160;
	<span class="coMULTI">/** Convets a angle in degrees into radians */</span>
	UFUNCTION<span class="br0">&#40;</span>BlueprintPure, meta <span class="sy1">=</span> <span class="br0">&#40;</span>HidePin <span class="sy1">=</span> <span class="st0">&quot;WorldContextObject&quot;</span>, DefaultToSelf <span class="sy1">=</span> <span class="st0">&quot;WorldContextObject&quot;</span>, FriendlyName <span class="sy1">=</span> <span class="st0">&quot;Convert Degrees to Radians&quot;</span>, CompactNodeTitle <span class="sy1">=</span> <span class="st0">&quot;DegToRad&quot;</span>, Keywords <span class="sy1">=</span> <span class="st0">&quot;convert radians degrees&quot;</span><span class="br0">&#41;</span>, Category <span class="sy1">=</span> Math<span class="br0">&#41;</span>
